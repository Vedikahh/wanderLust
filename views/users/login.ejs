<% layout("/layouts/boilerplate") %> 

<div class="row mt-3">
  <div class="col-6 offset-3">
    <h3>Login</h3>
    <br>
    <form method="POST" action="/login" novalidate class="needs-validation" nonvalidate>
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input name="username" id="username" placeholder="enter username" type="text" class="form-control" required />
      </div>

      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input name="password" id="password" placeholder="enter password" type="password" class="form-control" required />
      </div>

      <button class="btn btn-dark add-btn mt-3">Login</button>
    </form>
    </div>
</div>